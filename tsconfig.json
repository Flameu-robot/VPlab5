{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/react.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "app",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}